<?xml version="1.0" encoding="utf-8"?>
<!-- used to change the color of hyperlinks when pressed (in tweet details/user profile) -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:color="@color/light_gray"/>
    <item android:state_focused="true" android:color="@color/black"/>
    <item android:color="@color/medium_gray"></item>

</selector>